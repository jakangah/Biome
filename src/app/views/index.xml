<?xml version="1.0" encoding="UTF-8"?>
<biome:views xmlns:biome="http://github.com/mermetbt/Biome/">
	<biome:navbar>

		<biome:condition if="!#{auth.isAuthenticated}">
			<biome:form class="navbar-right" controller="auth" action="login">
				<biome:field value="#{auth.user.mail}" placeholder="Email" label=""/>
				<biome:field value="#{auth.user.password}" placeholder="Password" label=""/>
				<biome:button class="btn-success" value="Sign in" action="#{auth.login}"/>
			</biome:form>
		</biome:condition>

		<biome:condition if="#{auth.isAuthenticated}">
			<div class="navbar-right">
				<biome:variable value="#{auth.user.firstname}"/>
				<span> - </span>
				<biome:variable value="#{auth.user.lastname}"/>
			</div>
		</biome:condition>
	</biome:navbar>

	<biome:view action="index">
		<span>My main controller !</span>
		<br/>
		<a href="index/test">Test</a>
		<br/>

		<biome:a controller="index" action="unset"><span>Reset the session</span></biome:a>

		<div class="row">
			<div class="col-lg-4">
				<div class="well">
					<h3>Session collection example</h3>
					<h2>Sign up!</h2>
					<biome:form controller="auth" action="signup">
						<biome:field value="#{auth.user.firstname}"/>
						<biome:field value="#{auth.user.lastname}"/>
						<biome:field value="#{auth.user.mail}"/>
						<biome:field value="#{auth.user.password}"/>
						<biome:button class="btn-success" value="Sign up" action="#{auth.signup}"/>
					</biome:form>
				</div>
			</div>
			<div class="col-lg-4">
				<div class="well">
					<h3>Object example</h3>
					<h2>Sign up!</h2>
					<biome:form controller="auth" action="signup_obj">
						<biome:field value="#{user.firstname}"/>
						<biome:field value="#{user.lastname}"/>
						<biome:field value="#{user.mail}"/>
						<biome:field value="#{user.password}"/>
						<biome:button class="btn-success" value="Sign up" action="#{auth.signup_obj}"/>
					</biome:form>
				</div>
			</div>
		</div>

		<h3>Users registered!</h3>
		<ul>
			<biome:loop value="#{auth.users}" var="user">
				<li><biome:variable value="#{user.user_id}"/><span>: </span><biome:variable value="#{user.firstname}"/><span> - </span><biome:variable value="#{user.lastname}"/></li>
			</biome:loop>
		</ul>

		<h3>Users in database!</h3>
		<ul>
			<biome:loop value="#{users.users}" var="u">
				<li><biome:variable value="#{u.user_id}"/><span>: </span><biome:variable value="#{u.firstname}"/><span> - </span><biome:variable value="#{u.lastname}"/></li>
			</biome:loop>
		</ul>
	</biome:view>

	<biome:view action="test">
		<span>Test!</span><br/>
		<a href="../">Go back!</a>
	</biome:view>
</biome:views>
