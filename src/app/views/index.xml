<?xml version="1.0" encoding="UTF-8"?>
<biome:views xmlns:biome="http://github.com/mermetbt/Biome/">
	<biome:navbar>
		<biome:form class="navbar-right" controller="auth" action="login">
			<biome:field value="#{auth.user.mail}" placeholder="Email"/>
			<biome:field value="#{auth.user.password}" placeholder="Password"/>
			<biome:button class="btn-success" value="Sign in" action="#{auth.login}"/>
		</biome:form>
	</biome:navbar>

	<biome:view action="index">
		<span>My main controller !</span>
		<br/>
		<a href="index/test">Test</a>

		<div class="row">
			<div class="col-lg-4">
				<div class="well">
					<h3>Session collection example</h3>
					<h2>Sign up!</h2>
					<biome:form controller="auth" action="signup">
						<biome:field value="#{auth.user.firstname}"/><br/>
						<biome:field value="#{auth.user.lastname}"/><br/>
						<biome:field value="#{auth.user.mail}"/><br/>
						<biome:field value="#{auth.user.password}"/><br/>
						<biome:button class="btn-success" value="Sign up" action="#{auth.signup}"/>
					</biome:form>
				</div>
			</div>
			<div class="col-lg-4">
				<div class="well">
					<h3>Object example</h3>
					<h2>Sign up!</h2>
					<biome:form controller="auth" action="signup_obj">
						<biome:field value="#{user.firstname}"/><br/>
						<biome:field value="#{user.lastname}"/><br/>
						<biome:field value="#{user.mail}"/><br/>
						<biome:field value="#{user.password}"/><br/>
						<biome:button class="btn-success" value="Sign up" action="#{auth.signup_obj}"/>
					</biome:form>
				</div>
			</div>
		</div>

		<h3>Users registered!</h3>
		<ul>
			<biome:loop value="#{auth.users}" var="user">
				<li><biome:variable value="#{user.firstname}"/><span> - </span><biome:variable value="#{user.lastname}"/></li>
			</biome:loop>
		</ul>
	</biome:view>

	<biome:view action="test">
		<span>Test!</span><br/>
		<a href="../">Go back!</a>
	</biome:view>
</biome:views>
