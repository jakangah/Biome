<?xml version="1.0" encoding="UTF-8"?>
<biome:views xmlns:biome="http://github.com/mermetbt/Biome/">
	<biome:navbar/>

	<biome:view action="index">
		<span>My main controller !</span>
		<br/>
		<a href="index/test">Test</a>

		<div class="row">
			<div class="col-lg-4">
				<div class="well">
					<h2>Sign up!</h2>
					<biome:form controller="auth" action="signup">
						<biome:field id="username" value="#{auth.user.username}"/><br/>
						<biome:field id="password" value="#{auth.user.password}"/><br/>
						<biome:button class="btn-success" value="Sign Up" action="#{auth.signup}"/>
					</biome:form>
				</div>
			</div>
		</div>
	</biome:view>

	<biome:view action="test">
		<span>Test!</span><br/>
		<a href="../">Go back!</a>
	</biome:view>
</biome:views>
